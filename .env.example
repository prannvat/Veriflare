# Environment Variables
# Copy this file to .env and fill in the values

# ═══════════════════════════════════════════════════════════
#                    BLOCKCHAIN CONFIG
# ═══════════════════════════════════════════════════════════

# Flare Network RPC
FLARE_RPC_URL=https://flare-api.flare.network/ext/C/rpc
FLARE_TESTNET_RPC_URL=https://coston2-api.flare.network/ext/C/rpc

# Deployer private key (DO NOT COMMIT)
DEPLOYER_PRIVATE_KEY=

# Contract addresses (filled after deployment)
ESCROW_CONTRACT_ADDRESS=
FDC_CONTRACT_ADDRESS=

# ═══════════════════════════════════════════════════════════
#                    GITHUB INTEGRATION
# ═══════════════════════════════════════════════════════════

# GitHub App credentials (for repo access)
GITHUB_APP_ID=
GITHUB_APP_PRIVATE_KEY=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ═══════════════════════════════════════════════════════════
#                    STORAGE (IPFS)
# ═══════════════════════════════════════════════════════════

# IPFS Gateway
IPFS_GATEWAY_URL=https://gateway.pinata.cloud/ipfs/
PINATA_API_KEY=
PINATA_SECRET_KEY=

# ═══════════════════════════════════════════════════════════
#                    PREVIEW HOSTING
# ═══════════════════════════════════════════════════════════

# Docker Registry (for build previews)
DOCKER_REGISTRY_URL=
DOCKER_REGISTRY_USERNAME=
DOCKER_REGISTRY_PASSWORD=

# Preview subdomain
PREVIEW_BASE_URL=https://preview.veriflare.io

# ═══════════════════════════════════════════════════════════
#                    DATABASE
# ═══════════════════════════════════════════════════════════

DATABASE_URL=postgresql://localhost:5432/veriflare

# ═══════════════════════════════════════════════════════════
#                    FRONTEND
# ═══════════════════════════════════════════════════════════

NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=
NEXT_PUBLIC_ESCROW_CONTRACT_ADDRESS=
NEXT_PUBLIC_CHAIN_ID=14  # Flare mainnet: 14, Coston2 testnet: 114
